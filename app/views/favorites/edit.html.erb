<!-- Validation failure messages -->

<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Favorite #<%= @favorite.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_favorite/<%= @favorite.id %>" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-2 control-label">
          User
        </label>
        <div class="col-sm-10">
          <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @favorite.user_id %>">
        </div>
      </div>

      <!-- Label and input for goodreads_book_id -->
      <div class="form-group">
        <label for="goodreads_book_id" class="col-sm-2 control-label">
          Goodreads book
        </label>
        <div class="col-sm-10">
          <input type="text" id="goodreads_book_id" name="goodreads_book_id" placeholder="Goodreads book" class="form-control" value="<%= @favorite.goodreads_book_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Favorite" class="btn btn-warning">
          or
          <a href="/favorites/<%= @favorite.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

